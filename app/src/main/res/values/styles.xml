<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/mainbackground</item>
    </style>

    <style name="LabelText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#6688AA</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">#000000</item>

        <item name="android:ellipsize">end</item>
    </style>

    <style name="OverText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#88FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">#000000</item>

        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuChoice" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#4466AA</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">#444444</item>

        <item name="android:ellipsize">end</item>

        <item name="android:layout_marginLeft">5dp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
